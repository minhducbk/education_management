{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
        "*": [
          "node_modules/*",
          "app/javascript/*"
        ],
        "core-js/es7/reflect": [
          "node_modules/core-js/proposals/reflect-metadata"
        ]
    },
    "sourceMap": true,
    "target": "es5",
    "isolatedModules": true
  },
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "vendor",
    "public"
  ],
  "compileOnSave": false
}
